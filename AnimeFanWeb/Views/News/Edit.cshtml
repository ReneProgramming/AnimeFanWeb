@model AnimeFanWeb.Models.NewsEditViewModel

<h2>Edit News Article</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="form-group">
        <label for="Summary">Summary</label>
        <textarea class="form-control" asp-for="Summary"></textarea>
    </div>

    <div class="form-group">
        <label for="Content">Content</label>
        <textarea class="form-control" asp-for="Content"></textarea>
    </div>

    <div class="form-group">
        <label for="RelatedLinks">Related Links</label>
        <input type="text" class="form-control" asp-for="RelatedLinks" />
    </div>

    <div class="form-group">
        <label for="DatePublished">Date Published</label>
        <input type="datetime-local" class="form-control" asp-for="DatePublished" />
    </div>

    <div class="form-group">
        <label for="ImageFile">Upload New Image</label>
        <input type="file" class="form-control" asp-for="ImageFile" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
